rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules cover Gustify paths only.
    // Deploying these will OVERWRITE Gastify's rules.
    // For Phase 1, use with emulators only.

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /pantry/{ingredientId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /cookedMeals/{mealId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /shoppingList/{listId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /canonicalIngredients/{id} {
      allow read: if request.auth != null;
    }

    match /itemMappings/{hash} {
      allow read: if request.auth != null;
    }

    match /recipes/{recipeId} {
      allow read: if request.auth != null;
    }
  }
}
